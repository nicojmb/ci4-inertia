{
    "name": "nicojmb/ci4-inertia",
    "description": "Inertia server-side adapter for CodeIgniter 4",
    "keywords": [
        "nicojmb",
        "ci4-inertia"
    ],
    "homepage": "https://github.com/nicojmb/ci4-inertia",
    "license": "MIT",
    "authors": [
        {
            "name": "NicolÃ¡s Javier Martinez",
            "email": "info@nicojmb.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Inertia\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Inertia\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
